@model Actor

@{
    ViewData["Title"] = "Add a new actor";
}
<div class="create-actor-card">
    <div class="create-actor-card-content">
        <div class="create-actor-card-title">
            <h2>Create Actor</h2>
            <div class="actor-underline-title"></div>
        </div>
        <div class="create-actor-card-image">
            <img class="border-info rounded-circle" id="ProfilePicturePreview" />
        </div>
        <form asp-action="Create" class="create-form">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label asp-for="ProfilePictureURL" class="create-form-label"></label>
            <input asp-for="ProfilePictureURL" class="create-form-content"  />
            <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
            <div class="form-border"></div>
            <label asp-for="FullName" class="create-form-label"></label>
            <input asp-for="FullName" class="create-form-content" />
            <span asp-validation-for="FullName" class="text-danger"></span>
            <div class="form-border"></div>
            <label asp-for="Bio" class="create-form-label"></label>
            <input asp-for="Bio" class="create-form-content" />
            <span asp-validation-for="Bio" class="text-danger"></span>
            <div class="form-border"></div>
            <div class="create-actor-btns">
                <input type="submit" value="Create" class="btn actor-create-btn" />
                <a class="btn actor-show-all-btn" asp-action="Index">Show All</a>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })
        $("#ProfilePictureURL").on("change", function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $(this).val();
        })
    </script>
}
