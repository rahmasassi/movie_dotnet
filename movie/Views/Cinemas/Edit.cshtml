@model Cinema

@{
    ViewData["Title"] = "Update cinema";
}

<div class="edit-cinema-card">
    <div class="edit-cinema-card-content">
        <div class="edit-cinema-card-title">
            <h2>Edit @Model.Name</h2>
            <div class="cinema-underline-title"></div>
        </div>
        <div class="edit-cinema-card-image">
            <img class="border-info rounded-circle" id="CinemaLogoPreview" />
        </div>
        <form asp-action="Edit" class="edit-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <label asp-for="Logo" class="edit-form-label"></label>
            <input asp-for="Logo" class="edit-form-content"   />
        <span asp-validation-for="Logo" class="text-danger"></span>
        <div class="form-border"></div>
        <label asp-for="Name" class="edit-form-label"></label>
            <input asp-for="Name" class="edit-form-content"  />
        <span asp-validation-for="Name" class="text-danger"></span>
        <div class="form-border"></div>
            <label asp-for="Description" class="edit-form-label"></label>
            <input asp-for="Description" class="edit-form-content"  />
        <span asp-validation-for="Description" class="text-danger"></span>
        <div class="form-border"></div>
            <div class="edit-actor-btns">
        <input type="submit" value="Update" class="btn cinema-edit-btn my-2" />
        <a class="btn cinema-show-all-btn my-2" asp-action="Index">Show All</a>
        </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $("#Logo").val();
        })
        $("#Logo").on("change", function () {
            var output = document.getElementById('CinemaLogoPreview');
            output.src = $(this).val();
        })
    </script>
}
