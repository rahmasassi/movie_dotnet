@model Cinema

@{
    ViewData["Title"] = "Cinema Details";
}
<div class="cinema-card">
    <div class="cinema-card-content">
        <div class="cinema-card-title">
            <h2>Details for @Model.Name</h2>
            <div class="cinema-underline-title"></div>
        </div>
        <div class="cinema-card-image">
            <img class="border-info rounded-circle" style=width: 150px; height:150px" id="LogoPreview" />
        </div>
            <label asp-for="Logo" class="form-label"></label>
        <input asp-for="Logo" class="form-content" readonly />
            <span asp-validation-for="Logo" class="text-danger"></span>
            <div class="form-border"></div>
            <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-content" readonly />
            <span asp-validation-for="Name" class="text-danger"></span>
            <div class="form-border"></div>
            <label asp-for="Description" class="form-label"></label>
        <input asp-for="Description" class="form-content" readonly />
            <span asp-validation-for="Description" class="text-danger"></span>
        <div class="form-border"></div>
        <div class="cinemas-btns">
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <a class="btn cinema-edit-btn" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            }
            <a class="btn cinema-show-all-btn my-2" asp-action="Index">Show All</a>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('LogoPreview');
            output.src = $("#Logo").val();
        })
    </script>
}
