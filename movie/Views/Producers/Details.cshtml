@model Producer

@{
    ViewData["Title"] = "Producers Details";
}
<div class="producer-card">
    <div class="producer-card-content">
        <div class="producer-card-title">
            <h2>Details for @Model.FullName</h2>
            <div class="producer-underline-title"></div>
        </div>
        <div class="cinema-card-image">
            <img class="border-info rounded-circle" style="width: 150px; height:150px" id="ProfilePicturePreview" />
        </div>

        <label asp-for="ProfilePictureURL" class="form-label"></label>
        <input asp-for="ProfilePictureURL" class="form-content" readonly />
            <span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
        <div class="form-border"></div>
        <label asp-for="FullName" class="form-label"></label>
        <input asp-for="FullName" class="form-content" readonly />
            <span asp-validation-for="FullName" class="text-danger"></span>
            <div class="form-border"></div>
        <label asp-for="Bio" class="form-label"></label>
        <input asp-for="Bio" class="form-content" readonly />
            <span asp-validation-for="Bio" class="text-danger"></span>
        <div class="form-border"></div>
        <div class="producer-btns">
            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
            {
                <a class="btn producer-edit-btn" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            }
        <a class="btn producer-show-all-btn my-2" asp-action="Index">Show All</a>
        </div>
        </div>
    </div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ProfilePicturePreview');
            output.src = $("#ProfilePictureURL").val();
        })
    </script>
}
