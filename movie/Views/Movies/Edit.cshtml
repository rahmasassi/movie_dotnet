@model NewMovieVM;
@using movie.Data.Enums;
@using movie.Data.ViewModels;
@{
    ViewData["Title"] = "Update movie";
}
<div class="edit-movie-card">
    <div class="edit-movie-card-content">
        <div class="edit-movie-card-title">
            <h2>Edit Movie</h2>
            <div class="movie-underline-title"></div>
        </div>
        <div class="edit-movie-card-image">
            <img class="border-info rounded-circle" id="ImageUrlPreview" />
        </div>
        <form asp-action="Edit" class="form-container-movie">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="edit-form-label"></label>
                <input asp-for="Name" class="edit-form-content" />
                <span asp-validation-for="Name" class="text-danger"></span>
                <div class="form-border"></div>
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="edit-form-label"></label>
                <input asp-for="StartDate" type="date" class="edit-form-content" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
                <div class="form-border"></div>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="edit-form-label"></label>
                <input asp-for="EndDate" type="date" class="edit-form-content" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
                <div class="form-border"></div>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="edit-form-label"></label>
                <input asp-for="Price" type="number" class="edit-form-content" />
                <span asp-validation-for="Price" class="text-danger"></span>
                <div class="form-border"></div>
            </div>
            <div class="form-group">
                <label asp-for="ImageURL" class="edit-form-label"></label>
                <input asp-for="ImageURL" class="edit-form-content" />
                <span asp-validation-for="ImageURL" class="text-danger"></span>
                <div class="form-border"></div>
            </div>
            <div class="form-group">
                <label asp-for="CinemaId" class="edit-form-label"></label>
                <select asp-for="CinemaId" class="edit-form-content" asp-items="ViewBag.Cinemas"></select>
                <span asp-validation-for="CinemaId" class="text-danger"></span>
                <div class="form-border"></div>
            </div>
            <div class="form-group">
                <label asp-for="MovieCategory" class="edit-form-label"></label>
                <select asp-for="MovieCategory" class="edit-form-content" asp-items="Html.GetEnumSelectList<MovieCategory>()"></select>
                <span asp-validation-for="MovieCategory" class="text-danger"></span>
                <div class="form-border"></div>
            </div>
            <div class="form-group">
                <label asp-for="ProducerId" class="edit-form-label"></label>
                <select asp-for="ProducerId" class="edit-form-content" asp-items="ViewBag.Producers"></select>
                <span asp-validation-for="ProducerId" class="text-danger"></span>
                <div class="form-border"></div>
            </div>
            <div class="form-group">
                <label asp-for="ActorIds" class="edit-form-label"></label>
                <select asp-for="ActorIds" class="edit-form-content" asp-items="ViewBag.Actors" multiple></select>
                <span asp-validation-for="ActorIds" class="text-danger"></span>
                <div class="form-border"></div>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="edit-form-label"></label>
                <textarea asp-for="Description" class="edit-form-content"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
                <div class="form-border"></div>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn movie-edit-btn my-2" />
            </div>
            <div class="form-group">
                <a class="btn movie-show-all-btn my-2" asp-action="Index">Show All</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $("#ImageURL").val();
        });
        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}