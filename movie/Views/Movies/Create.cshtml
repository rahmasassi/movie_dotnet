@model NewMovieVM
@using movie.Data.Enums;
@using movie.Data.ViewModels;

@{
    ViewData["Title"] = "Create a new movie";
}
<div class="create-movie-card">
    <div class="create-movie-card-content">
        <div class="create-movie-card-title">
            <h2>Create Movie</h2>
            <div class="movie-underline-title"></div>
        </div>
        
        <form asp-action="Create" class="form-container-movie">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
            <label asp-for="Name" class="create-form-label"></label>
            <input asp-for="Name" class="create-form-content" />
            <span asp-validation-for="Name" class="text-danger"></span>
                <div class="form-border"></div>
            </div>
            <div class="form-group">
            <label asp-for="StartDate" class="create-form-label"></label>
            <input asp-for="StartDate" type="date" class="create-form-content" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
                <div class="form-border"></div>
            </div>
            <div class="form-group">
            <label asp-for="EndDate" class="create-form-label"></label>
            <input asp-for="EndDate" type="date" class="create-form-content" />
            <span asp-validation-for="EndDate" class="text-danger"></span>
                <div class="form-border"></div>
            </div>
            <div class="form-group">
            <label asp-for="Price" class="create-form-label"></label>
            <input asp-for="Price" type="number" class="create-form-content" />
            <span asp-validation-for="Price" class="text-danger"></span>
                <div class="form-border"></div>
            </div>
            <div class="form-group">
            <label asp-for="ImageURL" class="create-form-label"></label>
            <input asp-for="ImageURL" class="create-form-content" />
            <span asp-validation-for="ImageURL" class="text-danger"></span>
            <div class="form-border"></div>
            </div>
            <div class="form-group">
            <label asp-for="CinemaId" class="create-form-label"></label>
            <select asp-for="CinemaId" class="create-form-content" asp-items="ViewBag.Cinemas"></select>
            <span asp-validation-for="CinemaId" class="text-danger"></span>
                <div class="form-border"></div>
            </div>
            <div class="form-group">
            <label asp-for="MovieCategory" class="create-form-label"></label>
            <select asp-for="MovieCategory" class="create-form-content" asp-items="Html.GetEnumSelectList<MovieCategory>()"></select>
            <span asp-validation-for="MovieCategory" class="text-danger"></span>
                <div class="form-border"></div>
            </div>
            <div class="form-group">
            <label asp-for="ProducerId" class="create-form-label"></label>
            <select asp-for="ProducerId" class="create-form-content" asp-items="ViewBag.Producers"></select>
            <span asp-validation-for="ProducerId" class="text-danger"></span>
                <div class="form-border"></div>
            </div>
            <div class="form-group">
            <label asp-for="ActorIds" class="create-form-label"></label>
            <select asp-for="ActorIds" class="create-form-content" asp-items="ViewBag.Actors" multiple></select>
            <span asp-validation-for="ActorIds" class="text-danger"></span>
                <div class="form-border"></div>
            </div>
            <div class="form-group">
            <label asp-for="Description" class="create-form-label"></label>
            <textarea asp-for="Description" class="create-form-content"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
                <div class="form-border"></div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn movie-create-btn my-2" />
            </div>
            <div class="form-group">
                <a class="btn movie-show-all-btn my-2" asp-action="Index">Show All</a>
            </div>
        </form>
    </div>
</div>


@section Scripts{
    <script>
        $("#ImageURL").on("change", function () {
            var output = document.getElementById("ImageUrlPreview");
            output.src = $(this).val();
        })
    </script>
}
